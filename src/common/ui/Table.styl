
.sm-table
    border: 1px solid #e8edf2
    thead
        background: #f7f9fb
        tr
            border-bottom: 2px solid #d1dbe4

            td
                font-size: 12px
                color: #8f9fae
    tr
        border-bottom: 1px solid #e8edf2

        &:nth-child(even)
            background: #f9f9f9

        &.sm-table-row-selected
            background: rgba(0,0,0,0.12)

        td
            color: #485567
            font-size: 13px

        td .sm-table-col-number
            text-align: right

    tbody
        tr
            td
                line-height: 26px

    .sm-table-col-op
        text-align: center
        padding-right: 10px
